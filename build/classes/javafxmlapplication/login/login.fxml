<BorderPane stylesheets="@../BaseStyleSheet.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.login.LoginController">
   <center>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER" VBox.vgrow="NEVER">
               <children>
                  <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
                    <columnConstraints>
                      <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                      <ColumnConstraints halignment="LEFT" hgrow="NEVER" />
                        <ColumnConstraints halignment="LEFT" hgrow="NEVER" minWidth="90.0" prefWidth="90.0" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="55.0" prefHeight="55.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="55.0" prefHeight="55.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="50.0" prefHeight="55.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="65.0" prefHeight="65.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="55.0" prefHeight="55.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <TextField id="defaultInputBox" fx:id="usuarioField" maxHeight="30.0" maxWidth="128.0" minHeight="30.0" minWidth="128.0" prefHeight="30.0" prefWidth="128.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </TextField>
                        <PasswordField id="defaultInputBox" fx:id="contraseñaField" maxHeight="30.0" maxWidth="128.0" minHeight="30.0" minWidth="128.0" prefHeight="30.0" prefWidth="128.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </PasswordField>
                        <TextField id="defaultInputBox" fx:id="temporaryTextField" focusTraversable="false" maxHeight="30.0" maxWidth="128.0" minHeight="30.0" minWidth="128.0" prefHeight="30.0" prefWidth="128.0" stylesheets="@../BaseStyleSheet.css" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </TextField>
                        <Button id="buttonDeault" fx:id="login" defaultButton="true" focusTraversable="false" mnemonicParsing="false" onAction="#intentoIniciarSesion" text="Iniciar sesión" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="BOTTOM">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Button>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnSpan="3" GridPane.rowIndex="4">
                           <children>
                              <Label focusTraversable="false" text="¿No tienes cuenta?">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                              <Button fx:id="register" mnemonicParsing="false" onAction="#irARegistro" style="-fx-background-color: transparent; -fx-underline: true;" text="Regístrate">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                        <ToggleButton id="buttonDeault" fx:id="mostrarButton" maxHeight="33.0" maxWidth="33.0" minHeight="33.0" minWidth="33.0" mnemonicParsing="false" onAction="#verContraseña" prefHeight="33.0" prefWidth="33.0" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
                           <GridPane.margin>
                              <Insets bottom="3.0" left="5.0" right="5.0" />
                           </GridPane.margin>
                           <graphic>
                              <ImageView fx:id="ojo" fitHeight="33.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../resources/images/nover.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </ToggleButton>
                        <Label fx:id="usuarioLabel" focusTraversable="false" prefHeight="30.0" text="Usuario" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
                           <GridPane.margin>
                              <Insets />
                           </GridPane.margin>
                           <padding>
                              <Insets left="15.0" right="15.0" />
                           </padding>
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                        <Label fx:id="contraseñaLabel" alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" prefHeight="30.0" text="Contraseña" textOverrun="CLIP" GridPane.hgrow="NEVER" GridPane.rowIndex="2" GridPane.valignment="BOTTOM" GridPane.vgrow="NEVER">
                           <GridPane.margin>
                              <Insets />
                           </GridPane.margin>
                           <padding>
                              <Insets right="15.0" />
                           </padding>
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                        <Label fx:id="contraseñaErrorLabel" focusTraversable="false" text="Campo vacío " textFill="RED" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP">
                           <GridPane.margin>
                              <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                           </GridPane.margin>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </GridPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <HBox prefHeight="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="buttonDeault" fx:id="menuButton" alignment="CENTER" cancelButton="true" focusTraversable="false" mnemonicParsing="false" onAction="#onMenuButton" text="Menú Principal" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </HBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Pane HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </top>
</BorderPane>
