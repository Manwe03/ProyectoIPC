<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>


<BorderPane maxHeight="300.0" maxWidth="400.0" minHeight="300.0" minWidth="400.0" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.ventana.ventanaModalController">
   <top>
      <HBox alignment="CENTER" maxHeight="55.0" minHeight="55.0" prefHeight="55.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="labelFelicidades" alignment="CENTER" contentDisplay="CENTER" text="Información" HBox.hgrow="NEVER" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="iniciarSesion" mnemonicParsing="false" onAction="#aIniciarSesion" text="Iniciar sesión" HBox.hgrow="NEVER" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="menuPrincipal" alignment="CENTER" mnemonicParsing="false" onAction="#aMenuPrincipal" text="Menú principal" HBox.hgrow="NEVER" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="¡Felicidades! La cuenta ha sido creada con éxito" />
         </children>
      </HBox>
   </center>
</BorderPane>
