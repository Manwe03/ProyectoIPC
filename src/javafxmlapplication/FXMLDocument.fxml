<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="mainStackPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.FXMLDocumentController">
   <children>
      <BorderPane id="ventana" fx:id="ventanaPane" maxHeight="300.0" maxWidth="400.0" minHeight="300.0" minWidth="400.0" prefHeight="300.0" prefWidth="400.0" stylesheets="@BaseStyleSheet.css">
         <bottom>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Button id="buttonDeault" fx:id="iButton" cancelButton="true" focusTraversable="false" mnemonicParsing="false" onAction="#onIButton" text="Cancelar" HBox.hgrow="NEVER" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button id="buttonDeault" fx:id="dButton" alignment="CENTER" defaultButton="true" focusTraversable="false" mnemonicParsing="false" onAction="#onDButton" text="Aceptar" HBox.hgrow="NEVER" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
         </bottom>
         <top>
            <HBox alignment="CENTER" maxHeight="55.0" minHeight="55.0" prefHeight="55.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" text="Información" HBox.hgrow="NEVER">
                     <font>
                        <Font size="17.0" />
                     </font></Label>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Text fx:id="infoLabel" strokeType="OUTSIDE" strokeWidth="0.0" text="¡Felicidades! La cuenta ha sido creada con éxito" textAlignment="CENTER" />
               </children>
            </HBox>
         </center>
      </BorderPane>
      <BorderPane fx:id="mainBorderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="500.0" stylesheets="@BaseStyleSheet.css">
         <top>
            <HBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button id="buttonDeault" fx:id="perfilButton" maxHeight="50.0" maxWidth="80.0" minHeight="50.0" minWidth="80.0" mnemonicParsing="false" onAction="#onPerfilButton" prefHeight="50.0" prefWidth="80.0" text="Perfil" />
                  <Button id="buttonDeault" fx:id="reservasButton" maxHeight="50.0" maxWidth="80.0" minHeight="50.0" minWidth="80.0" mnemonicParsing="false" onAction="#onReservasButton" prefHeight="50.0" prefWidth="80.0" text="Reservas" />
                  <Button id="buttonDeault" fx:id="pistasButton" maxHeight="50.0" maxWidth="80.0" minHeight="50.0" minWidth="80.0" mnemonicParsing="false" onAction="#onPistasButton" prefHeight="50.0" prefWidth="80.0" text="Pistas" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
   </children>
</StackPane>
